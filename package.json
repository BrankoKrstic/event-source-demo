{
  "name": "event-source",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "bon run build:client && npm run build:server",
    "build:client": "vue-tsc -p tsconfig.client.json --noEmit && NODE_ENV-production vite build --outDir build/client",
    "build:server": "NODE_ENV=production tsc -p ./tsconfig.server.json",
    "dev": "concurrently \"set -a && nodemon\" && \"npm run ts-check:client\"",
    "ts-check:client": "vue-tsc -p ./tsconfig.client.json -- watch --noEmit",
    "lint": "eslint --fix ."
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "node_modules",
      "client"
    ],
    "watch": [
      "server"
    ],
    "exec": "tsc -p ./tsconfig.server.json && node ./build/server/main.js",
    "ext": "ts,js,json"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-typescript": "^14.3.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.14.0",
    "nodemon": "^3.1.9",
    "postcss-preset-env": "^10.1.3",
    "sass": "1.77.8",
    "sass-embedded": "^1.77.8",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "unplugin-fonts": "^1.1.1",
    "unplugin-vue-components": "^0.27.2",
    "vite": "^6.0.7",
    "vite-plugin-vuetify": "^2.0.4",
    "vue-tsc": "^2.2.0"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "axios": "^1.7.9",
    "express": "^4.21.2",
    "ulid": "^2.3.0",
    "vuetify": "^3.7.6"
  }
}
